{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "github:sp1222/language-day-by-day"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "separateMinorPatch": true
    }
  ],
  "autoApprove": true,
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}